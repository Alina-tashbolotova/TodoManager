<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.boarding.OnBoardFragment">



    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/image_board"
        android:layout_width="@dimen/dp250"
        android:layout_height="@dimen/dp250"
        android:layout_marginTop="@dimen/marginTop50"
        app:lottie_fileName="task.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/txt_title_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textSize="@dimen/ed_text_size_30"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_board" />

    <TextView
        android:id="@+id/txt_description_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description_about_app"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_title_board" />

    <Button
        android:id="@+id/start_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp80"
        android:layout_marginTop="@dimen/dp60"
        android:background="@drawable/buttun2"
        android:textSize="@dimen/sp20"
        android:backgroundTint="@color/red"
        android:drawableEnd="@drawable/ic_baseline_east_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_description_board" />

</androidx.constraintlayout.widget.ConstraintLayout>