<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/text"
    android:padding="@dimen/dp10"
    android:layout_margin="@dimen/dp10">



    <View
        android:id="@+id/view_left_color"
        android:layout_width="5dp"
        android:layout_height="100dp"
        android:layout_margin="@dimen/dp16"
        android:background="@color/yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/make_a_breakfast"
        android:textColor="@color/black"
        android:textSize="@dimen/sp20"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/view_left_color"
        app:layout_constraintTop_toTopOf="@id/view_left_color" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time"
        android:textColor="@color/black"
        android:textSize="@dimen/sp16"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp35"
        app:layout_constraintStart_toStartOf="@id/txt_title"
        app:layout_constraintTop_toTopOf="@id/txt_title" />

    <ImageView
        android:id="@+id/image_item"
        android:layout_width="@dimen/dp150"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/dp16"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="@id/view_left_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_left_color" />

</androidx.constraintlayout.widget.ConstraintLayout>